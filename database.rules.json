{
  "rules": {
    "chat_messages": {
      "$clanId": {
        ".indexOn": ["ts"],
        ".read": "auth != null && root.child('presence/online').child(auth.uid).child('clanId').val() === $clanId",
        "$msgId": {
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['u','n','type','ts']) && (!newData.child('m').exists() || (newData.child('m').isString() && newData.child('m').val().length <= 512))"
        }
      }
    },
    "presence": {
      "online": {
        "$uid": {
          ".write": "auth != null && auth.uid === $uid",
          ".read": "auth != null"
        }
      }
    }
  }
}
